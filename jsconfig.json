{
        "compilerOptions":{
                "baseUrl": ".", // Set root for absolute paths
                "paths": { // Create variable for paths: "@/myVar/*" matches "components/layout/*"
                        "@/assets/*": ["./public/assets/*"],
                        "@/components/*": ["./components/*"],
                        "@/styles/*": ["./styles/*"],
                        "@/public/*": ["./public/*"],
                        "@/api/*": ["./pages/api/*"],
                        "@/blogImages/*": ["./public/assets/blog/*"],
                        "@/postsImages/*": ["./public/assets/blog/postsImages/*"],
                        "@/resources/*": ["./public/assets/resources/*"],
                },
        },
        "exclude": [
                "node_modules"
        ]
}